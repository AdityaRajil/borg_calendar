<?xml version="1.0"?>
<!DOCTYPE struts-config PUBLIC "-//Apache Software Foundation//DTD Struts Configuration 1.2//EN" "http://struts.apache.org/dtds/struts-config_1_2.dtd">
<struts-config>
  <data-sources>
  </data-sources>
  <form-beans>
    <form-bean name="addrForm" type="net.sf.borgweb.form.AddressForm"/>
    <form-bean name="taskForm" type="net.sf.borgweb.form.TaskForm"/>
    <form-bean name="apptForm" type="net.sf.borgweb.form.AppointmentForm"/>
  </form-beans>
  <global-exceptions>
  </global-exceptions>
  <global-forwards>
  </global-forwards>
  <action-mappings>
    <action path="/common/logout" type="net.sf.borgweb.action.LogoutAction">
      <forward name="success" path="/common/logout.jsp"/>
    </action>
    <action path="/addr/listAddr" type="net.sf.borgweb.action.AddrListAction">
      <forward name="success" path="/addr/addrlist.jsp"/>
    </action>
    <action path="/addr/editAddr" name="addrForm" type="net.sf.borgweb.action.AddrAction" scope="request" validate="false" input="/addr/addr.jsp">
      <forward name="success" path="/addr/addr.jsp"/>
    </action>
    <action path="/addr/saveAddr" name="addrForm" type="net.sf.borgweb.action.AddrAction" scope="request" validate="true" input="/addr/addr.jsp">
      <forward name="success" path="/addr/listAddr.do"/>
    </action>
    <action path="/addr/delAddr" type="net.sf.borgweb.action.AddrAction">
      <forward name="success" path="/addr/listAddr.do"/>
    </action>
    <action path="/addr/newAddr" name="addrForm" type="net.sf.borgweb.action.AddrAction" scope="request" validate="false" input="/addr/addr.jsp">
      <forward name="success" path="/addr/addr.jsp"/>
    </action>
    <action path="/task/listTask" type="net.sf.borgweb.action.TaskListAction">
      <forward name="success" path="/task/tasklist.jsp"/>
    </action>
    <action path="/task/editTask" name="taskForm" type="net.sf.borgweb.action.TaskAction" scope="request" validate="false" input="/task/task.jsp">
      <forward name="success" path="/task/task.jsp"/>
    </action>
    <action path="/task/saveTask" name="taskForm" type="net.sf.borgweb.action.TaskAction" scope="request" validate="true" input="/task/task.jsp">
      <forward name="success" path="/task/listTask.do"/>
    </action>
    <action path="/task/delTask" type="net.sf.borgweb.action.TaskAction">
      <forward name="success" path="/task/listTask.do"/>
    </action>
    <action path="/task/newTask" name="taskForm" type="net.sf.borgweb.action.TaskAction" scope="request" validate="false" input="/task/newtask.jsp">
      <forward name="success" path="/task/newtask.jsp"/>
    </action>
    <action path="/task/saveNewTask" name="taskForm" type="net.sf.borgweb.action.TaskAction" scope="request" validate="true" input="/task/newtask.jsp">
      <forward name="success" path="/task/listTask.do"/>
    </action>
    <action forward="/index.jsp" path="/mainmenu">
    </action>
    <action forward="/common/login.jsp" path="/common/login">
    </action>
    <action path="/appt/listAppt" type="net.sf.borgweb.action.ApptListAction">
      <forward name="success" path="/appt/apptlist.jsp"/>
    </action>
    <action path="/appt/editAppt" name="apptForm" type="net.sf.borgweb.action.ApptAction" scope="request" validate="false" input="/appt/appt.jsp">
      <forward name="success" path="/appt/appt.jsp"/>
    </action>
    <action forward="/user/chgPass" path="/user/chgPass.jsp">
    </action>
  </action-mappings>
  <controller/>
  <message-resources parameter="Application"/>
</struts-config>
