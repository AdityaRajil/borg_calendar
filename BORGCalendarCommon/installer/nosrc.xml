<?xml version="1.0" encoding="iso-8859-1" standalone="yes" ?>

<!-- 
    To compile it :
    - go in the bin directory where you installed IzPack
    - call "compile ../sample/install.xml -b ../sample"
-->

<installation version="1.0">

    <!-- 
        The info section.
        The meaning of the tags should be natural ...
    -->
    <info>
        <appname>BORG Calendar</appname>
        <appversion>1.4.2</appversion>
        <authors>
            <author name="Michael Berger" email="i_flem@users.sourceforge.net"/>
	    <author name="Mohan Embar" email="membar@users.sourceforge.net"/>
	    <author name="Stepan Borodulin" email="painter2@users.sourceforge.net"/>
	    <author name="Piero Trono (Italian Translation)" email="tropic@users.sourceforge.net"/>
	    <author name="Stefan Pottinger (German Translation)" email="stpotti@users.sourceforge.net"/>
        </authors>
	<javaversion>1.4</javaversion>
	<url>http://borg-calendar.sourceforge.net/</url>
    </info>
    
    <!-- 
        The gui preferences indication.
        Sets the installer window to 640x480. It will not be able to change the size.
    -->
    <guiprefs width="640" height="480" resizable="yes"/>
    
    <!-- 
        The locale section.
        Asks here to include the English and French langpacks.
    -->
    <locale>
        <langpack iso3="eng"/>
        <langpack iso3="fra"/>
        <langpack iso3="spa"/>
        <langpack iso3="deu"/>
        <langpack iso3="cat"/>
        <langpack iso3="dan"/>
        <langpack iso3="fin"/>
        <langpack iso3="hun"/>
        <langpack iso3="ita"/>
        <langpack iso3="jpn"/>
        <langpack iso3="ned"/>
        <langpack iso3="pol"/>
        <langpack iso3="por"/>
        <langpack iso3="rom"/>
        <langpack iso3="rus"/>
        <langpack iso3="spa"/>
        <langpack iso3="svk"/>
        <langpack iso3="swe"/>
        <langpack iso3="ukr"/>
    </locale>
    
    <!-- 
        The resources section.
        The ids must be these ones if you want to use the LicencePanel and/or the InfoPanel.
    -->
    <resources>
        <res id="LicencePanel.licence" src="COPYING"/>
        <res id="InfoPanel.info" src="RELEASE_NOTES.txt"/>
	<res id="InfoPanel.info_ita" src="RELEASE_NOTES.txt_ita"/>
	<res src="ShortcutSpec.xml" id="shortcutSpec.xml"/>
	<res id="installer.langsel.img" src="borg.jpg" />

    </resources>

<native type="izpack" name="ShellLink.dll"/>
    
    <!-- 
        The panels section.
        We indicate here which panels we want to use. The order will be respected.
    -->
    <panels>
        <panel classname="HelloPanel"/>
        <panel classname="InfoPanel"/>
        <panel classname="LicencePanel"/>
        <panel classname="TargetPanel"/> 
        <panel classname="PacksPanel"/>
        <panel classname="InstallPanel"/>
        <panel classname="ShortcutPanel"/>
        <panel classname="FinishPanel"/>
    </panels>
    
    <!-- 
        The packs section.
        We specify here our packs.
    -->
    <packs>
        <pack name="Base" required="yes">
            <description>The base program and help files</description>
            <file src="RELEASE_NOTES.txt" targetdir="$INSTALL_PATH"/>
            <file src="RELEASE_NOTES.txt_ita" targetdir="$INSTALL_PATH"/>
            <file src="COPYING" targetdir="$INSTALL_PATH"/>
            <file src="borg.jar" targetdir="$INSTALL_PATH"/>
	    <file src="lib/jh.jar" targetdir="$INSTALL_PATH/lib"/>
	    <file src="lib/borghelp.jar" targetdir="$INSTALL_PATH/lib"/>
        </pack>
        <pack name="Windows Systray Support" os="windows" required="no">
		<description>Support for a system tray icon (recommended for windows users)</description>
            <file src="TrayIcon12.dll" targetdir="$INSTALL_PATH"/> 
	    <file src="lib/trayicon.jar" targetdir="$INSTALL_PATH/lib"/> 
	    <file src="lib/TRAYICON.README" targetdir="$INSTALL_PATH/lib"/> 
        </pack>
        <pack name="PlasticXP Look and Feel" required="no">
		<description>The plastic XP Look and feel. Recommended for users that don't have Java 5.0 or Windows XP. This will add the PlasticXP Look and Feel as a option in BORG.</description>
	    <file src="lib/looks-1.2.2.jar" targetdir="$INSTALL_PATH/lib"/> 
	    <file src="lib/LICENSE.looks" targetdir="$INSTALL_PATH/lib"/> 
        </pack>
        <pack name="iCal Support" required="no">
		<description>Adds support for limited Import/Export to ICalendar format</description>
	    <file src="lib/commons-logging.jar" targetdir="$INSTALL_PATH/lib"/> 
	    <file src="lib/ical4j.jar" targetdir="$INSTALL_PATH/lib"/> 
	    <file src="lib/LICENSE.iCal4j" targetdir="$INSTALL_PATH/lib"/> 
	    <file src="lib/LICENSE.commons-logging" targetdir="$INSTALL_PATH/lib"/> 
        </pack>
	<pack name="RDBMS Support" preselected="no" required="no">
		<description>SQL needed to create a BORG database in MySQL</description>
            <file src="borg.sql" targetdir="$INSTALL_PATH"/> 
        </pack>
	<pack name="MDBTOOL" preselected="no" required="no">
		<description>Optional tool for repairing databases (rarely needed)</description>
            <file src="mdbtool.jar" targetdir="$INSTALL_PATH"/> 
        </pack>
    </packs>
    
</installation>
