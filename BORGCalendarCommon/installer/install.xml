<?xml version="1.0" encoding="iso-8859-1" standalone="yes" ?>

<!-- 
    To compile it :
    - go in the bin directory where you installed IzPack
    - call "compile ../sample/install.xml -b ../sample"
-->

<installation version="1.0">

    <!-- 
        The info section.
        The meaning of the tags should be natural ...
    -->
    <info>
        <appname>BORG Calendar</appname>
        <appversion>1.5.1.2</appversion>
	<javaversion>1.4</javaversion>
	<url>http://borg-calendar.sourceforge.net/</url>
    </info>
    
    <!-- 
        The gui preferences indication.
        Sets the installer window to 640x480. It will not be able to change the size.
    -->
    <guiprefs width="640" height="480" resizable="yes"/>
    
    <!-- 
        The locale section.
        Asks here to include the English and French langpacks.
    -->
    <locale>
        <langpack iso3="eng"/>
        <langpack iso3="fra"/>
        <langpack iso3="spa"/>
        <langpack iso3="deu"/>
        <langpack iso3="cat"/>
        <langpack iso3="dan"/>
        <langpack iso3="fin"/>
        <langpack iso3="hun"/>
        <langpack iso3="ita"/>
        <langpack iso3="jpn"/>
        <langpack iso3="ned"/>
        <langpack iso3="pol"/>
        <langpack iso3="por"/>
        <langpack iso3="rom"/>
        <langpack iso3="rus"/>
        <langpack iso3="spa"/>
        <langpack iso3="svk"/>
        <langpack iso3="swe"/>
        <langpack iso3="ukr"/>
    </locale>
    
    <!-- 
        The resources section.
        The ids must be these ones if you want to use the LicencePanel and/or the InfoPanel.
    -->
    <resources>
        <res id="LicencePanel.licence" src="COPYING"/>
        <res id="InfoPanel.info" src="RELEASE_NOTES.txt"/>
	<res src="ShortcutSpec.xml" id="shortcutSpec.xml"/>
	<res id="installer.langsel.img" src="borg.jpg" />

    </resources>

<native type="izpack" name="ShellLink.dll"/>
    
    <!-- 
        The panels section.
        We indicate here which panels we want to use. The order will be respected.
    -->
    <panels>
        <panel classname="HelloPanel"/>
        <panel classname="InfoPanel"/>
        <panel classname="LicencePanel"/>
        <panel classname="TargetPanel"/> 
        <panel classname="PacksPanel"/>
        <panel classname="InstallPanel"/>
        <panel classname="ShortcutPanel"/>
        <panel classname="SimpleFinishPanel"/>
    </panels>
    
    <!-- 
        The packs section.
        We specify here our packs.
    -->
    <packs>
        <pack name="Base" required="yes">
            <description>The base program and help files</description>
            <file src="RELEASE_NOTES.txt" targetdir="$INSTALL_PATH"/>
            <file src="COPYING" targetdir="$INSTALL_PATH"/>
            <file src="borg.jar" targetdir="$INSTALL_PATH"/>
	    	<file src="lib/jh.jar" targetdir="$INSTALL_PATH/lib"/>
	    	<file src="lib/borghelp.jar" targetdir="$INSTALL_PATH/lib"/>
	    	<file src="lib/jcalendar.jar" targetdir="$INSTALL_PATH/lib"/>
	    	<file src="lib/license.jcalendar.txt" targetdir="$INSTALL_PATH/lib"/>
	    	<file src="lib/commons-logging.jar" targetdir="$INSTALL_PATH/lib"/>
	    	<file src="lib/commons-codec-1.3.jar" targetdir="$INSTALL_PATH/lib"/>
	    	<file src="lib/commons-httpclient-3.0-rc3.jar" targetdir="$INSTALL_PATH/lib"/> 
	    	<file src="lib/ical4j.jar" targetdir="$INSTALL_PATH/lib"/> 
	    	<file src="lib/mail.jar" targetdir="$INSTALL_PATH/lib"/> 
	    	<file src="lib/activation.jar" targetdir="$INSTALL_PATH/lib"/> 
	    	<file src="lib/LICENSE.iCal4j" targetdir="$INSTALL_PATH/lib"/> 
	    	<file src="lib/LICENSE.commons-logging" targetdir="$INSTALL_PATH/lib"/> 
	    	<file src="lib/LICENSE.commons-codec" targetdir="$INSTALL_PATH/lib"/> 
	    	<file src="lib/LICENSE.commons-httpclient" targetdir="$INSTALL_PATH/lib"/> 
	    	<file src="borg.sql" targetdir="$INSTALL_PATH"/>
            <file src="update1_5.sql" targetdir="$INSTALL_PATH"/>
            <file src="update151.sql" targetdir="$INSTALL_PATH"/>
            <file src="lib/looks-1.3.2.jar" targetdir="$INSTALL_PATH/lib"/> 
	        <file src="lib/LICENSE.looks" targetdir="$INSTALL_PATH/lib"/> 
	        <file src="mdbtool.jar" targetdir="$INSTALL_PATH"/> 
        </pack>
        <pack name="Systray Support" required="no">
		<description>Support for a system tray icon (Recommended)</description>
            <file src="lib/jdic.dll" os="windows" targetdir="$INSTALL_PATH/lib"/>
            <file src="lib/libjdic.so" os="unix" targetdir="$INSTALL_PATH/lib"/>
            <file src="lib/tray.dll" os="windows" targetdir="$INSTALL_PATH/lib"/>
            <file src="lib/libtray.so" os="unix" targetdir="$INSTALL_PATH/lib"/>
            <file src="lib/LICENSE_JDIC.txt" targetdir="$INSTALL_PATH/lib"/>
	    	<singlefile src="lib/jdic-linux.jar" os="unix" target="$INSTALL_PATH/lib/jdic.jar"/> 
	    	<file src="lib/jdic.jar" os="windows" targetdir="$INSTALL_PATH/lib"/>
        </pack>
     <pack name="Palm Conduits" preselected="no" required="no">
		<description>Palm Hot-Sync conduits for BORG</description>
            <file src="conduits" targetdir="$INSTALL_PATH"/> 
        </pack>
     <pack name="Remote Server" preselected="no" required="no">
		<description>Remote Server that can serve BORG Data over a network. Runs under Tomcat.</description>
            <file src="borg_servlet.war" targetdir="$INSTALL_PATH"/> 
        </pack>

    </packs>
    
</installation>
